
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    tools:context="mx.edu.updc.app_upc.GruposFragment">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:id="@+id/lista_grupos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:footerDividersEnabled="false"
        android:fadeScrollbars="true"
        android:scrollbarThumbVertical="@drawable/scroll_list_alumnos" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_sincronizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:baselineAlignBottom="false"
        android:src="@drawable/arrow_up_bold_circle"
        app:fabSize="normal"
        app:backgroundTint="#db320c" />

</FrameLayout>
